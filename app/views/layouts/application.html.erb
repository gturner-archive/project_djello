<!DOCTYPE html>
<html <%= content_for(:angular_app) %> >
  <head>
    <title>ProjectDjello</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-faded">
      <%= link_to "Djello", root_path, class: "navbar-brand" %>
      <% if user_signed_in? %>
        <ul class="nav navbar-nav pull-md-right">
          <li class="nav-item">
            <a href="" class="nav-link">Welcome! <%= current_user.username %></a>
          </li>
          <li class="nav-item">
            <%= link_to "Signout", destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        </ul>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
